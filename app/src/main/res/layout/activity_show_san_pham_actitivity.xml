<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShowSanPhamActitivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarShow"
        android:background="@color/black"
        app:title="Hiển thị sản phẩm"
        app:titleTextColor="@color/textBold"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listViewShow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarShow">
    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>