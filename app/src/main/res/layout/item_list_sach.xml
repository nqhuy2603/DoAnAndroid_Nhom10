<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageItemSach"
            android:layout_weight="3"
            android:src="@drawable/category_sach"
            android:layout_width="0dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textviewNameItemSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tên sản phẩm"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/text" />
            <TextView
                android:id="@+id/textviewPriceItemSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá: "
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/textviewDescribeItemSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mô tả:"                android:textStyle="bold"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>